use gtk::prelude::*;
use gtk::{Application, ApplicationWindow, Bu};

fn main() {
    let app = Application::builder()
        .application_id("Test")
        .build();

    app.connect_activate(buil_ui);
    app.run();
}
fn buil_ui(app : &Application) {
    let window = ApplicationWindow::builder()
        .title("Test")
        .application(app)
        .build();

    window.show();
}